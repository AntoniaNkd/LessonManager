@model LessonManager.ViewModel.OverViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Μαθήματα</h2>
<script src="~/JavaScript/Lessons.js" type="text/javascript"></script>

<div class="alert alert-success" id="success-message" role="alert">
    Το μάθημα προστέθηκε με επιτυχία !
</div>
@{
    if (Model.UserRole == "admin")
    {
        <button type="button" style="float: right;" id="add-lesson" class=" d-flex btn btn-labeled btn-success f-right mb-4">
            <span class="btn-label">
                <i class="fa fa-plus mr-2"></i>
            </span> Προσθήκη μαθήματος
        </button>
    }
}
<table id="lessons_table" class="display mt-2">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Descritpion</th>
        </tr>
    </thead>
</table>

@*Modal προσθήκης μαθήματος*@
<div class="modal" id="lesson-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Προσθήκη Μαθήματος</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="name">Ονομασία Μαθήματος</label>
                        <input type="text" class="form-control" id="name" />
                    </div>
                    <div class="form-group">
                        <label for="description">Περιγαρφή μαθήματος</label>
                        <textarea class="form-control" id="description" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="close-modal" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="submit-new-lesson" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>